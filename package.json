{
  "name": "kinemora",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"wait-on tcp:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.kinemora.app",
    "productName": "Kinemora",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "resources/**/*",
      "services/**/*",
      ".env",
      "credentials.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "resources/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Kinemora",
      "deleteAppDataOnUninstall": true,
      "installerSidebar": "build/installerSidebar.png",
      "uninstallerSidebar": "build/installerSidebar.png",
      "installerHeader": "build/installerHeader.png",
      "installerHeaderIcon": "resources/icon.png"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/ios": "^8.0.0",
    "@consumet/extensions": "^1.8.7",
    "@phosphor-icons/react": "^2.1.10",
    "@plasmohq/messaging": "^0.7.2",
    "@scure/bip39": "^2.0.1",
    "@supabase/supabase-js": "^2.93.3",
    "@types/crypto-js": "^4.2.2",
    "@types/dompurify": "^3.2.0",
    "abort-controller": "^3.0.0",
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "classnames": "^2.5.1",
    "cookie": "^1.1.1",
    "crypto-js": "^4.2.0",
    "dompurify": "^3.3.1",
    "dotenv": "^17.2.3",
    "form-data": "^4.0.5",
    "fscreen": "^1.2.0",
    "fuse.js": "^7.1.0",
    "googleapis": "^171.0.0",
    "hls-parser": "^0.16.0",
    "hls.js": "^1.6.15",
    "i18next": "^25.7.3",
    "immer": "^11.1.3",
    "iso-639-1": "^3.1.5",
    "json5": "^2.2.3",
    "jwt-decode": "^4.0.0",
    "lodash.merge": "^4.6.2",
    "nanoid": "^5.1.6",
    "node-fetch": "^3.3.2",
    "node-stream-zip": "^1.15.0",
    "ofetch": "^1.5.1",
    "opentype.js": "^1.3.4",
    "puppeteer-core": "^24.35.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-i18next": "^16.5.1",
    "react-router-dom": "^6.30.2",
    "react-youtube": "^10.1.0",
    "set-cookie-parser": "^2.7.2",
    "slugify": "^1.6.6",
    "subsrt-ts": "^2.1.2",
    "unpacker": "^1.0.1",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@types/lodash.merge": "^4.6.9",
    "@types/node": "^22.14.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^9.0.3"
  }
}